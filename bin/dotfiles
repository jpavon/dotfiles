#!/usr/bin/env bash


# Update dotfiles
run_update() {

cd ~/.dotfiles

function doIt() {
    rsync --exclude ".git/" --exclude ".DS_Store" --exclude "sync.sh" --exclude ".osx" --exclude "README.md" -av . ~
}
doIt
unset doIt

# Go back to previous directory
cd -

# Success logging
e_success() {
    printf "$(tput setaf 10)âœ“ %s$(tput sgr0)\n" "$@"
}
e_success 'Sync done.'


# Reload shell
exec $SHELL -l

}




run_update
exit

